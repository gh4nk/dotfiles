# Increase volume
"pulseaudio-ctl up"
   m:0x10 + c:123
   XF86AudioRaiseVolume

# Decrease volume
"pulseaudio-ctl down"
   m:0x10 + c:122
   XF86AudioLowerVolume

# Mute
"pulseaudio-ctl mute"
   m:0x10 + c:121
   XF86AudioMute

# Next song
"playerctl next"
   m:0x10 + c:171
   XF86AudioNext

# Previous song
"playerctl previous"
   m:0x10 + c:173
   XF86AudioPrev

# Play/pause
"playerctl play-pause"
   m:0x10 + c:172
   XF86AudioPlay

# Stop
"playerctl stop"
   m:0x10 + c:174
   XF86AudioStop

# Region Screenshot
"xfce4-screenshooter -r -s ~/Pictures/Screenshots/$(date +%s%3N).png"
   m:0x10 + c:107
   Mod2 + Print

# Window screenshot
"xfce4-screenshooter -w -s ~/Pictures/Screenshots/$(date +%s%3N).png"
   m:0x11 + c:107
   Shift+Mod2 + Print

# Region screenshot
"xfce4-screenshooter -r -s ~/Pictures/Screenshots/$(date +%s%3N).png"
   m:0x14 + c:107
   Print
